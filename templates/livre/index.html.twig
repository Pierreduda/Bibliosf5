{% extends 'base.html.twig' %}

{% block title %}Hello LivreController!
{% endblock %}

{% block body %}
	<table class="table tablebordered table-striped">
		<thead class="thead-dark">
			<th>ID</th>
			<th>Couverture</th>
			<th>Titre</th>
			<th>Auteur</th>
			<th>Disponibilit√©</th>
			<th>action</th>
		</thead>
		<tbody>
			{% for livre in liste_livres %}
				<tr>
					<td>{{livre.id}}</td>
					<td>
					<img src="{{url_images_livres ~ livre.couverture}}" alt="Pas de couverture">
					</td>
					<td>{{livre.titre}}</td>
					<td>{{livre.auteur}}</td>
					<td>{{livre in liste_indisponibles ? "Non" : "Oui"}}</td>
					<td>
						<a href="{{ path("detailLivre", {id: livre.id}) }}"><i class="fas fa-search"></i></a>
						<a href="{{ path("livre_modifier", {id: livre.id})}}"><i class="far fa-edit"></i></a>
						<a href="{{ path("livre_supprimer", {id: livre.id}) }}"><i class="far fa-trash-alt"></i></a>
					</td>
				</tr>

			{% endfor %}
		</tbody>
	</table>
{% endblock %}
